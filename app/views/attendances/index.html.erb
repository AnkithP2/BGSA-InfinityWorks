<%= stylesheet_link_tag "users" %>

<style type="text/css">
    body { background: black; }
</style>

<p id="notice"><%= notice %></p>

<style type="text/css">
  body { background: black; } 
</style>

<br>
<div class='card w-75 mx-auto'>
  <div class='card-body'  >
    <div class="text-center">
      <h1>Attendances</h1>
    </div>
    <table class='table ' style="margin-left:auto;margin-right:auto;width:75%;">
      <thead>
        <tr>
          <th colspan="25">Event</th>
          <th colspan ="15">First Name</th>
          <th colspan ="10">Last Name</th>
          <th colspan="10"></th>
        </tr>
      </thead>

      <tbody>
        <% @attendances.each do |attendance| %>
          <tr>
            <td colspan="25"><%= Event.find(attendance.event_id).title%></td>
            <td colspan ="15"><%= User.find(attendance.user_id).firstname %></td>
            <td colspan ="10"><%= User.find(attendance.user_id).lastname %></td>
            <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light btn-rounded" if is_admin %></td>      </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div>
