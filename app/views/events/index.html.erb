<p id="notice"><%= notice %></p>

<h1>Events</h1>
<h2>Shows all events</h2>
<% if @admin %>
  Admin: <%= @admin.name %>
<% else %>
  No admin permissions
<%end%>

<div class = "container mt-5 text-center">
<%= month_calendar(attribute: :starttime, end_attribute: :endtime, events: @meetings) do |date,meetings| %>
  <div class = "day">
    <%= date%>
  </div>
  <%meetings.each do |meeting|%>
    <div class= "card-header">
      <div class= "card-title">
        <%= link_to meeting.title, meeting%>
      </div>
    </div>
    <div class = "card-body">
      <p class = "card-text">
        Located at: 
        <%= meeting.location %>
      </p>
    </div>
    <div class = "card-footer">
      <p class = "card-text">
        Start: 
        <%= meeting.starttime.strftime('%B %d %Y, at %I:%M %p') %>
      </p>
      <p class = "card-text">
        End: 
        <%= meeting.endtime.strftime('%B %d %Y, at %I:%M %p') %>
      </p>
    </div>
  <%end%>
<% end %>
</div>

