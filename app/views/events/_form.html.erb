<%= form_with model: event do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :date %>
    <%= form.date_field :date %>
    <%= form.label :starttime %>
    <%= form.time_field :starttime %>
    <%= form.label :endtime %>
    <%= form.time_field :endtime %>
    <%= form.label :logincode %>
    <%= form.text_field :logincode %>
    <%= form.label :location %>
    <%= form.text_field :location %>
    <%= form.label :eventpoints %>
    <%= form.number_field :eventpoints, in: 1..100, step: 1.0 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>