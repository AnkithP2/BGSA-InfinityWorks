<%= form_with model: event do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="field">
    <%= form.label "Title: " %>
    <%= form.text_field :title %> <br><br>
    <%= form.label "Date: " %>
    <%= form.date_field :date %> <br><br>
    <%= form.label "Start Time: " %>
    <%= form.datetime_local_field :starttime %> <br><br>
    <%= form.label "End Time: " %>
    <%= form.datetime_local_field :endtime %> <br><br>
    <%= form.label "Login Code: " %>
    <%= form.text_field :logincode %> <br><br>
    <%= form.label "Location: " %>
    <%= form.text_field :location %> <br><br>
    <%= form.label "Event Points: " %>
    <%= form.number_field :eventpoints, in: 1..100, step: 1.0 %> <br><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>