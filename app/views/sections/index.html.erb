<%= stylesheet_link_tag "users" %>

<style type="text/css">
    body { background: black; }
</style>

<br>

<p id="notice"><%= notice %></p>

<div class='card w-75 mx-auto' id=“point-card”>
  <div class='card-body'>
    <div class="mx-auto" style="width: 400px;">
      <h1 class='card-title text-center'>Sections</h1>
    </div>

    <table class='table'>
      <thead>
        <tr>
          <th>Label</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.label %></td>
        <!-- <td><%= link_to section.label %></td> -->

        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>
<div class='d-flex justify-content-center'>
  <%= link_to 'Back', links_path, class: "btn btn-light btn-rounded me-3" if is_admin %>
  <%= link_to 'New Section', new_section_path, class: "btn btn-light btn-rounded me-3" if is_admin %>
</div>






















