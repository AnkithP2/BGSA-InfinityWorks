<%= stylesheet_link_tag "links" %>




<p id="notice"><%= notice %></p>



<div class='card w-75 mx-auto'>
  <div class='card-body'>
    <div class="mx-auto" style="width: 400px;">
      <h1 class='card-title text-center'>Point Tracker</h1>
    </div>
    

    <style type="text/css">
      body { background: black; } 
    </style>


    <table class='table '>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Semester Points</th>
          <th>Total Points</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.userpoints %></td>
            <td><%= user.usertotal %></td>

            <td><%= link_to 'Show', user_path(user) if is_admin %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if is_admin%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
