<%= stylesheet_link_tag "users" %>
<style type="text/css">
    body { background: black; }
</style>

<p id="notice"><%= notice %></p>
<br>
<div class='card w-75 mx-auto' id=“point-card”>
  <div class='card-body'>
    <h1 class='card-title text-center'>Point Tracker</h1>



    <table style="margin-left:auto;margin-right:auto;width:75%;" class='table '>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Semester Points</th>
          <th>Total Points</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.userpoints %></td>
            <td><%= user.usertotal %></td>

            <td><%= link_to 'Show', user_path(user) if is_admin %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if is_admin%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
