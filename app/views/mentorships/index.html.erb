<p id="notice"><%= notice %></p>

<h1>Mentorships</h1>

<table>
  <thead>
    <tr>
      <th>Mentor</th>
      <th>Mentee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentorships.each do |mentorship| %>
      <tr>
        <td><%= mentorship.mentor_id_id %></td>
        <td><%= mentorship.mentee_id_id %></td>
        <td><%= link_to 'Show', mentorship %></td>
        <td><%= link_to 'Edit', edit_mentorship_path(mentorship) %></td>
        <td><%= link_to 'Destroy', mentorship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

