<%= stylesheet_link_tag "links" %>

<p id="notice"><%= notice %></p>

<h1 class='link_header'>Links</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class='link_sections'>
    <% @sections.each do |sec| %>
      <tr>
        <th class='section_label'><%=sec.label %></th>
          <% sec.links.each do |link| %>
            <tr>

              <td class='link_title'><%= link.title %></td>
              <td class='link_link'><%= link_to link.link, link.link %></td>

              <td><%= link_to 'Show', link_path(link) if is_admin %></td>
              <td><%= link_to 'Edit', edit_link_path(link) if is_admin %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } if is_admin %></td>
            </tr>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Link', new_link_path if is_admin %>
<%= link_to 'New Section', new_section_path if is_admin %>
<%= link_to 'Show Sections', sections_path if is_admin %>


